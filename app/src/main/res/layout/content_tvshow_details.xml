<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myseries="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    myseries:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.adley.myseriesproject.TVShowDetailsActivity"
    tools:showIn="@layout/activity_tvshow_details">

    <include
        android:id="@+id/app_bar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/title_tvshow_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/app_bar"
        android:text="@string/title_tvshow_detail_placeholder"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/title_tvshow_detail"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        android:paddingTop="10dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_tvshow_detail">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/poster_tvshow"
                android:layout_width="200dp"
                android:layout_height="220dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@drawable/placeholder" />

        </LinearLayout>

        <TextView
            android:id="@+id/synopsis_tvshow"
            android:layout_width="177dp"
            android:layout_height="233dp"
            android:layout_gravity="right|top"
            android:text="@string/title_activity_tvshow_details"
            android:paddingEnd="5dp"/>
    </FrameLayout>


</RelativeLayout>
