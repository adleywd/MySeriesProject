<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:myseries="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                myseries:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context=".activities.DetailsTVShowActivity"
                tools:showIn="@layout/activity_tvshow_details">

    <include
        android:id="@+id/app_bar"
        layout="@layout/shared_toolbar"/>

    <RelativeLayout
        android:id="@+id/introduction_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/app_bar"
        android:paddingTop="10dp"
        android:background="@color/md_purple_800">

        <TextView
            android:id="@+id/title_tvshow_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="3"
            android:text="@string/title_activity_tvshow_details"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>


            <TextView
                android:id="@+id/note_rating_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:text="@string/rating_note"
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/note_number_tvshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/note_rating_label"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@+id/note_rating_label"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:text="0.0"
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/start_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/note_rating_label"
                android:src="@drawable/star"/>

    </RelativeLayout>


    <View
        android:id="@+id/divider1"
        style="@style/Divider"
        android:layout_below="@id/introduction_layout"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:id="@+id/synopsis_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider1"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/synopsis_label_tvshow"
            style="@style/LabelConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/synopsis_label"/>

        <TextView
            android:id="@+id/synopsis_tvshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"/>
    </LinearLayout>

    <View
        android:id="@+id/divider2"
        style="@style/Divider"
        android:layout_below="@id/synopsis_layout"/>

    <RelativeLayout
        android:id="@+id/next_episode_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2">

        <TextView
            android:id="@+id/next_episode_label_tvshow"
            style="@style/LabelConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/next_episode_label"/>

        <LinearLayout
            android:id="@+id/next_episode_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/next_episode_label_tvshow"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/next_episode_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_next_episode_label"/>

            <TextView
                android:id="@+id/next_episode_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/next_episode_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/next_episode_date_layout"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/next_episode_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_next_episode_label"/>

            <TextView
                android:id="@+id/next_episode_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/divider3"
        style="@style/Divider"
        android:layout_below="@id/next_episode_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider3"
        android:orientation="vertical">

        <TextView
            style="@style/LabelConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/seasons_label"/>

        <TextView
            android:id="@+id/no_list_season_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/warning_no_list_season"
            android:visibility="gone"/>

        <view
            android:id="@+id/recycler_view_season_list"
            class="android.support.v7.widget.RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</RelativeLayout>
