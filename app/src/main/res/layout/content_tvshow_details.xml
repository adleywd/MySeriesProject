<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:myseries="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                myseries:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context=".activities.DetailsTVShowActivity"
                tools:showIn="@layout/activity_tvshow_details">

    <include
        android:id="@+id/app_bar"
        layout="@layout/shared_toolbar"/>

    <LinearLayout
        android:id="@+id/introduction_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/poster_tvshow"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/placeholder"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_tvshow_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:maxLines="3"
                android:text="@string/title_activity_tvshow_details"
                android:textSize="30sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingStart="10dp">

                <ImageView
                    android:id="@+id/starImage"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/star"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="2dp"
                    android:paddingStart="2dp"
                    android:text="@string/rating_note"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/note_number_tvshow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="2dp"
                    android:paddingStart="2dp"
                    android:text="0.0"
                    android:textSize="20sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <View
        android:id="@+id/divider1"
        style="@style/Divider"
        android:layout_below="@id/introduction_layout"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:id="@+id/synopsis_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider1"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/synopsis_label_tvshow"
            style="@style/LabelConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/synopsis_label"/>

        <TextView
            android:id="@+id/synopsis_tvshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"/>
    </LinearLayout>

    <View
        android:id="@+id/divider2"
        style="@style/Divider"
        android:layout_below="@id/synopsis_layout"/>

    <RelativeLayout
        android:id="@+id/next_episode_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2">

        <TextView
            android:id="@+id/next_episode_label_tvshow"
            style="@style/LabelConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/next_episode_label"/>

        <LinearLayout
            android:id="@+id/next_episode_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:layout_below="@id/next_episode_label_tvshow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next_episode_date_label"
                android:text="@string/date_next_episode_label"/>

            <TextView
                android:id="@+id/next_episode_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/next_episode_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:layout_below="@id/next_episode_date_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next_episode_name_label"
                android:text="@string/name_next_episode_label"/>

            <TextView
                android:id="@+id/next_episode_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/divider3"
        style="@style/Divider"
        android:layout_below="@id/next_episode_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider3"
        android:orientation="vertical">

        <TextView
            style="@style/LabelConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/seasons_label"/>

        <view
            android:id="@+id/recycler_view_season_list"
            class="android.support.v7.widget.RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</RelativeLayout>
