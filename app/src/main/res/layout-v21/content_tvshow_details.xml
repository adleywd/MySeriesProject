<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myseries="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="?android:attr/actionBarSize"
    myseries:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.DetailsTVShowActivity"
    tools:showIn="@layout/activity_tvshow_details">

    <RelativeLayout
        android:id="@+id/introduction_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:layout_below="@+id/app_bar_layout"
        android:background="@color/md_purple_800">

        <ImageView
            android:id="@+id/introduction_image_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/note_rating_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:background="#AA000000"
            android:gravity="center_vertical"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:singleLine="true"
            android:text="@string/rating_note"
            android:textColor="@color/md_white_1000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/note_number_tvshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/note_rating_label"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@+id/note_rating_label"
            android:background="#AA000000"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:text="@string/abbreviation_do_not_have"
            android:textColor="@color/md_white_1000"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/start_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/note_rating_label"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/note_rating_label"
            android:background="#AA000000"
            android:src="@drawable/ic_star_rate_white_18dp"
            android:tint="@color/md_yellow_500"
            android:textColor="@color/md_white_1000"/>

        <TextView
            android:id="@+id/title_tvshow_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#AA000000"
            android:gravity="center"
            android:maxLines="3"
            android:text="@string/title_activity_tvshow_details"
            android:textColor="@color/md_white_1000"
            android:textSize="30sp"/>

    </RelativeLayout>


    <View
        android:id="@+id/divider1"
        style="@style/Divider"
        android:layout_below="@id/introduction_layout"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:id="@+id/next_episode_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/divider1">

        <TextView
            android:id="@+id/next_episode_label_tvshow"
            style="@style/LabelConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/next_episode_label"/>

        <LinearLayout
            android:id="@+id/next_episode_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/next_episode_label_tvshow"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/next_episode_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next_episode_label"/>

            <TextView
                android:id="@+id/next_episode_date_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/loading"/>

        </LinearLayout>


    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        style="@style/Divider"
        android:layout_below="@id/next_episode_layout"/>

    <LinearLayout
        android:id="@+id/synopsis_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/synopsis_label_tvshow"
            style="@style/LabelConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/synopsis_label"/>

        <TextView
            android:id="@+id/synopsis_tvshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"/>
    </LinearLayout>

    <View
        android:id="@+id/divider3"
        style="@style/Divider"
        android:layout_below="@+id/synopsis_linear_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider3"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            style="@style/LabelConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/seasons_label"/>

        <TextView
            android:id="@+id/no_list_season_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/warning_no_list_season"
            android:visibility="gone"/>

        <view
            android:id="@+id/recycler_view_season_list"
            class="android.support.v7.widget.RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</RelativeLayout>