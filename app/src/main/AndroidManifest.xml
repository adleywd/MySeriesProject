<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="br.com.adley.myseriesproject">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_initials"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySeries">
        <activity
            android:name=".activities.SearchTVShowActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:parentActivityName=".activities.HomeActivity"
            android:theme="@style/Theme.MySeries">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.HomeActivity"/>
        </activity>
        <activity
            android:name=".activities.DetailsTVShowActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:parentActivityName=".activities.SearchTVShowActivity"
            android:theme="@style/Theme.MySeries">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SearchTVShowActivity"/>
        </activity>
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Theme.MySeries">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AboutAppActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:parentActivityName=".activities.HomeActivity"
            android:theme="@style/Theme.MySeries">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.HomeActivity"/>
        </activity>
    </application>

</manifest>