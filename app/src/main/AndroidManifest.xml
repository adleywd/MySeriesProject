<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.adley.whatsnextseries">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySeries">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="br.com.adley.whatsnextseries.activities.SearchTVShowActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name_search"
            android:parentActivityName="br.com.adley.whatsnextseries.activities.HomeActivity"
            android:theme="@style/Theme.MySeries">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.adley.whatsnextseries.activities.HomeActivity" />
        </activity>
        <activity
            android:name="br.com.adley.whatsnextseries.activities.DetailsTVShowActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name_details"
            android:parentActivityName="br.com.adley.whatsnextseries.activities.SearchTVShowActivity"
            android:theme="@style/Theme.MySeries">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.adley.whatsnextseries.activities.SearchTVShowActivity" />
        </activity>
        <activity
            android:name="br.com.adley.whatsnextseries.activities.HomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/Theme.MySeries">

        </activity>
        <activity
            android:name="br.com.adley.whatsnextseries.activities.AboutAppActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name_about"
            android:parentActivityName="br.com.adley.whatsnextseries.activities.HomeActivity"
            android:theme="@style/Theme.MySeries">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.adley.whatsnextseries.activities.HomeActivity" />
        </activity>
        <activity
            android:name="br.com.adley.whatsnextseries.activities.AppPreferences"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name_preference"
            android:parentActivityName="br.com.adley.whatsnextseries.activities.HomeActivity"
            android:theme="@style/Theme.MySeries">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.adley.whatsnextseries.activities.HomeActivity" />
        </activity>
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name="br.com.adley.whatsnextseries.activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.adley.whatsnextseries.activities.PopularTVShowActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name_popular"
            android:parentActivityName="br.com.adley.whatsnextseries.activities.HomeActivity"
            android:theme="@style/Theme.MySeries">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.adley.whatsnextseries.activities.HomeActivity" />

        </activity>
    </application>

</manifest>